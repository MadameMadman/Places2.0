<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Places I've Travelled</h1>
      <ul>
        @foreach (var place in Model)
        {
        <li><a href="/places/@place.GetId()">@place.GetCity() , @place.GetState()</a></li>
        }
      </ul>
    <p><a href="/places/new">Add a Place</a></p>
    <form action="/places/delete" method="post">
      <button type="submit" name="button">Clear all places</button>
    </form>
  </body>
</html>
